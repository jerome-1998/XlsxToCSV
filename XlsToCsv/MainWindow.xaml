<Window x:Class="XlsToCsv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XlsToCsv"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox IsEnabled="False" TextChanged="TbxPfad_TextChanged" Width="600" Name="tbxPfad"></TextBox>
        <Button Grid.Column="1" HorizontalAlignment="Right" Width="200" Content="Öffnen" Name="bntSucheFile" Click="BntSucheFile_Click"></Button>
        <Button Grid.Row="1" Content="Abbrechen" Name="btnAbbrechen" Click="BtnAbbrechen_Click"></Button>
        <Button Grid.Row="1" Grid.Column="1" Content="Umwandeln" Name="btnConvert" Click="BtnConvert_Click" IsEnabled="False"></Button>
    </Grid>
</Window>
